{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": [
		"discord",
		"scorePlayers",
		"mpd"
	],
	"properties": {
		"discord": {
			"type": "object",
			"required": [
				"test",
				"token",
				"serverID",
				"commandChannelID",
				"voiceChannelID"
			],
			"additionalProperties": false,
			"properties": {
				"test": {
					"type": "boolean",
					"default": true
				},
				"token": {
					"type": "string",
					"default": "DISCORD_BOT_TOKEN"
				},
				"serverID": {
					"type": "string",
					"default": "DISCORD_SERVER_ID"
				},
				"commandChannelID": {
					"type": "string",
					"default": "DISCORD_COMMAND_CHANNEL_ID"
				},
				"voiceChannelID": {
					"type": "string",
					"default": "DISCORD_VC_ID"
				},
				"ignoredUsers": {
					"type": "array",
					"default": [],
					"$comment": "discord tags of users that won't show up in the layout (for the bot), example `Bot#1234`",
					"items": {
						"type": "string"
					}
				}
			}
		},
		"scorePlayers": {
			"type": "array",
			"items": {
				"type": "object",
				"additionalProperties": false,
				"required": ["displayName", "twitch", "discord", "discordProfileUrl"],
				"properties": {
				  "displayName": {
					"type": "string"
				  },
				  "pronouns": {
					"type": "string"
				  },
				  "twitch": {
					"type": "string"
				  },
				  "country": {
					"type": "string"
				  },
				  "discord": {
					"type": "string"
				  },
				  "discordProfileUrl": {
					"type": "string"
				  }
				}
			}
		},
		"mpd": {
			"type": "object",
			"required": [
				"enable",
				"address",
				"port"
			],
			"additionalProperties": false,
			"properties": {
				"enable": {
					"type": "boolean",
					"default": false
				},
				"address": {
					"type": "string",
					"default": "localhost"
				},
				"port": {
					"type": "number",
					"default": 6600
				}
			}
		}
	}
}
