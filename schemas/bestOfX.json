{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "enabled",
        "totalMatches",
        "matchCounts"
    ],
    "properties": {
        "enabled": {
            "type": "boolean",
            "default": false
        },
        "totalMatches": {
            "type": "number",
            "default": 3
        },
        "matchCounts": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "default": [
                0,
                0,
                0,
                0
            ]
        }
    }
}
